!------------------------------------------------------------------------------
! URxvt
!   Three man pages to not forget
!   man 1 urxvt
!   man 3 urxvtperl
!   man 7 urxvt

URxvt.font:                 -zevv-peep-*-*-*-*-14-*-*-*-*-*-*-*, xft:Anonymous Pro:size=10
!Disable bold font
URxvt.boldFont:             -zevv-peep-*-*-*-*-14-*-*-*-*-*-*-*
URxvt.letterSpace:          0
URxvt.scrollstyle:          plain
URxvt.saveLines:            20000
!borderLess needs to be off for xmonad to not go nuts
URxvt.borderLess:           false
URxvt.depth:                32
URxvt.buffered:             true
!URxvt.background is set below, and is using a transparency value
!These do not require compositing, (Native Transparency)
URxvt.transparent:          true
URxvt.shading:              10
URxvt.blurRadius:           5
URxvt.cursorBlink:          true
URxvt.pointerBlank:         true

!Perl Extension Stuff
URxvt.perl-lib:             $HOME/.urxvt/ext
URxvt.perl-ext-common:      default,matcher,url-select,keyboard-select
URxvt.urlLauncher:          /usr/bin/firefox
URxvt.matcher.button:       1
URxvt.underlineURLs:        true

!Keyboard shortcuts
!These are kept here for the sake of readability
!Under perl-ext-common, the keyboard shortcut can be placed after the extension in <>
URxvt.keysym.M-u:           perl:url-select:select_next
URxvt.keysym.M-Escape:      perl:keyboard-select:activate

!Make Ctrl-<-+=> change between three font sizes
URxvt.keysym.C-minus:       command:\033]710;-zevv-peep-*-*-*-*-14-*-*-*-*-*-*-*\007
URxvt.keysym.C-equal:       command:\033]710;-zevv-peep-*-*-*-*-16-*-*-*-*-*-*-*\007
URxvt.keysym.C-plus:        command:\033]710;-zevv-peep-*-*-*-*-20-*-*-*-*-*-*-*\007

!Colorscheme based on jellebeans colorscheme for vim
!Regular colors are true to original, brights are mostly saturation increases
!!BLK Cursor
URxvt.color0      : #000000
URxvt.color8      : #000000
!!!RED Tag
URxvt.color1      : #cf6a4c
URxvt.color9      : #dc3a13
!!GRN SpecialKey
URxvt.color2      : #99ad6a
URxvt.color10     : #9dca32
!!YEL Keyword
URxvt.color3      : #dad085
URxvt.color11     : #f5d90b
!!BLU Number
URxvt.color4      : #668799
URxvt.color12     : #006399
!!MAG Precondit
URxvt.color5      : #f0a0c0
URxvt.color13     : #f03b84
!!CYN Float
URxvt.color6      : #8bcbe8
URxvt.color14     : #00afff
!!WHT Search
URxvt.color7      : #e8e8d3
URxvt.color15     : #ffffff
!!TXT Normal, Normal, Cursor
![80] is the transparancy value of URXVT, this requires compositing (True Transparency)
URxvt.background  : [80]#151515
URxvt.foreground  : #e8e8d3
URxvt.cursorColor : #b0d0f0
!!HLT Include, StatusLine, ErrorMsg
!URxvt.colorBD     : #dddddd
!Underline color, for our url highlighter
URxvt.colorUL     : #00afff
!URxvt.colorIT     : #80d4aa

!-----------------------------------------------------------------------------
! Xft

Xft.antialias:      true

!-----------------------------------------------------------------------------
! xpdf
xpdf.antialias:         yes
xpdf.enableFreetype:    yes
xpdf.foreground:        black
xpdf.background:        white
xpdf.urlCommand:        /usr/bin/firefox %s

! vim: ft=xdefaults
